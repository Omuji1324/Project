@model IEnumerable<LibData.Slider>

@{
    ViewBag.Title = "Slider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Slider</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
           Hình Ảnh
        </th>
        <th>
           URL
        </th>
        <th>
           Mô tả
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <img  class="img-thumbnail img-list"  align="left" src="@Manage.Controllers.SliderController._ImagesPath.Replace("~","")/@item.TenFile" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mota)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
