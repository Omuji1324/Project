
@{
    Layout = null;
}
@model IEnumerable<LibData.ProductImg>
@using PagedList;
@using PagedList.Mvc;
<style>
    a {
        cursor: pointer !important;
    }
</style>
<table class="table table-bordered table-responsive-sm  table-hover">
    <thead>
        <tr>
            <th>Hình ảnh</th>
            <th>Màu sắc</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">
                    <div class=" text-danger">
                        Không có dữ liệu!
                    </div>
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {


            <tr onclick="ListWarehouse(@item.Id)" style="cursor:pointer">
                @if (!string.IsNullOrEmpty(@item.Url))
                {
                    <td>
                        <div style="width:160px;height:115px">
                            <img src="~/Images/Products/@item.Url" id="" class="img-thumbnail">
                        </div>
                    </td>
                }
                else
                {
                    <td>
                    </td>
                }
                <td>
                    @item.Color
                </td>
                <td>
                    <div class="btn-group">
                        <a data-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-fw fa-wrench"></i>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" onclick="EditProductImg(@item.Id,@item.ProductId)">Sửa</a>
                            <a class="dropdown-item" onclick="AddImport(@item.Id,'')">Nhập kho</a>
                        </div>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="col-md-12">
    <div class="row float-right">
        @*phân trang*@
        @Html.PagedListPager((IPagedList)Model,
        page => Url.Action("ListProductImg", new { page = page, productid = ViewBag.productid }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
        {
            HttpMethod = "GET",
            UpdateTargetId = "list-productimg",
        })
        )
    </div>
</div>
