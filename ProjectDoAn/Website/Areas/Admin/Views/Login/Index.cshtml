@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Meta -->
    <meta name="description" content="Admin">
    <meta name="author" content="Admin">
    <title>Admin </title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin-2.min.js"></script>
</head>
<body class="text-center">
    <div class="container-fluid" style="padding-top:10%">
        <div class="row ">
            <div class="col-md-4 col-12 offset-md-4">
                <div class="card card-body" style="padding-top:10%" >
                    <form class="user login-card-from m-0" method="post">
                        <h1 class="h3 mb-3 fw-normal">Đăng nhập</h1>
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="backURL" value="@ViewBag.backURL" />
                        <div class="form-group mt-5">
                            <input type="text" class="form-control form-control-user" id="UserName" name="UserName" placeholder="Tài khoản">
                            @Html.ValidationMessage("UserName", "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control form-control-user" id="Password" name="Password" placeholder="Mật khẩu">
                            @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                        </div>
                        <p style="color:red">
                            @Html.ValidationMessage("error", "", new { @class = "text-danger" })
                        </p>
                        <div class="form-group mt-5">
                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                Đăng nhập
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
  
</body>
</html>
