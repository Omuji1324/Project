@{
    Layout = null;
}
@model List<LibData.Ward>
@if (ViewBag.DistrictId > 0 || ViewBag.DistrictId != null)
{
    <label>
        Phường/Xã<span class="text-danger">*</span>
    </label>
    <select class="form-control" name="WardId" id="WardId" >
        @foreach (var item in Model)
        {

            <option value="@item.Id" @(item.Id == ViewBag.selectedw ? "selected" : "")>@item.Name</option>
        }
    </select>
}
else
{
    <label>
        Phường/Xã<span class="text-danger">*</span>
    </label>
    <select class="form-control" name="WardId" id="WardId" onclick="" disabled>
        <option value="0">Chọn Phường/Xã</option>
    </select>
}
