@model LibData.CauHinh

@{
    ViewBag.Title = Model.TenCauHinh;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="active">Sửa cấu hình : @Model.TenCauHinh</li>
</ol>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.TenCauHinh, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenCauHinh,  new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TenCauHinh, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Giatri,"Giá trị", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Giatri, new { @class = "form-control", @row = "4" })
                @Html.ValidationMessageFor(model => model.Giatri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
        <p>@ViewBag.error</p>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
