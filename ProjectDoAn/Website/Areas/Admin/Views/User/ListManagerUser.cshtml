
@{
    Layout = null;
}
@model IEnumerable<LibData.User>
@using PagedList;
@using PagedList.Mvc;
<style>
    a {
        cursor: pointer !important;
    }
</style>
<table class="table table-bordered table-responsive-sm  table-hover">
    <thead>
        <tr>
            <th>Tài khoản</th>
            <th>Họ tên</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
            <th>Địa chỉ chi tiết</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7" class="text-center">
                    <div class=" text-danger">
                        Không có dữ liệu!
                    </div>
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @item.UserName
        </td>
        <td>
            @item.FullName
        </td>
        <td>
            @item.Phone
        </td>
        @if (item.ProviceId.HasValue)
        {
            <td>
                @item.Province.Name
            </td>
        }
        else
        {
            <td>
            </td>
        }

        <td>
            @item.Address
        </td>
        @if (item.Status.HasValue)
        {
            <td>
                @LibData.Configuration.UserConfig.StatusToDictionarySelect[item.Status.Value]
            </td>
        }
        else
        {
            <td></td>
        }

        <td>
            <div class="btn-group">
                <a data-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-fw fa-wrench"></i>
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" onclick="EditManager(@item.Id)">Sửa</a>
                    <a class="dropdown-item" onclick="DeleteManager(@item.Id)">Xóa</a>
                    <a class="dropdown-item" onclick="Change(@item.Id)">Đặt lại mật khẩu</a>
                </div>
            </div>
        </td>
    </tr>
        }

    </tbody>
</table>
<div class="col-md-12">
    <div class="row float-right">
        @*phân trang*@
        @Html.PagedListPager((IPagedList)Model,
        page => Url.Action("ManagerUser", new { page = page, keysearch = ViewBag.keysearch }),
        new PagedListRenderOptions
        {
        })
    </div>
</div>
