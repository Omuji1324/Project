
@{
    Layout = null;
}
@model IEnumerable<LibData.ProductImg>
@using PagedList;
@using PagedList.Mvc;
<style>
    a {
        cursor: pointer !important;
    }
</style>
<table class="table table-bordered table-responsive-sm  table-hover">
    <thead>
        <tr>
            <th>Hình ảnh</th>
            <th>Màu sắc</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">
                    <div class=" text-danger">
                        Không có dữ liệu!
                    </div>
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {


            <tr onclick="ListWarehouse(@item.Id)" style="cursor:pointer">
                @if (!string.IsNullOrEmpty(@item.Url))
                {
                    <td>
                        <div style="width:115px;height:115px">
                            <img  src="~/Images/Products/@item.Url" id="listimg" class="img-thumbnail imgshow">
                        </div>
                    </td>
                }
                else
                {
                    <td>
                    </td>
                }
                <td>
                    @item.Color
                </td>
                <td>
                    <div class="btn-group">
                        <a data-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-fw fa-wrench"></i>
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" onclick="EditProductImg(@item.Id,@item.ProductId)">Sửa</a>
                            <a class="dropdown-item" onclick="DeleteProductImg(@item.Id)">Xóa</a>
                        </div>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="col-md-12">
    <div class="row float-right">
        @*phân trang*@
        @Html.PagedListPager((IPagedList)Model,
        page => Url.Action("ListProductImg", new { page = page, productid = ViewBag.productid }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
        {
            HttpMethod = "GET",
            UpdateTargetId = "list-productimg",
        })
        )
    </div>
</div>
<script>
    $(".imgshow").each(function () {
        if ($(this).height() < $(this).width()) {
            $(this).css('width', '100%');
            $(this).css('height', 'auto');
        } else {
            $(this).css('height', '100%');
            $(this).css('width', 'auto');
        }
    })
    function DeleteProductImg(id) {

        Swal.fire({
            title: 'Xóa',
            text: "Xóa màu sản phẩm?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Đồng ý!',
            cancelButtonText: 'Hủy!'
        }).then((result) => {
            if (result.isConfirmed) {
                loading(true)
                $.ajax({
                    url: '/Admin/ProductImg/Delete?id=' + id,
                    success: function (rs) {
                        loading(false)
                        if (rs) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Xóa thành công',
                                showConfirmButton: false,
                                timer: 1500
                            })
                            loadListProduct()
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Xóa thất bại',
                                showConfirmButton: false,
                                timer: 1500
                            })
                        }

                    }
                });
            }
        })
    }
</script>