
@{
    Layout = null;
}
@model IEnumerable<LibData.Warehouse>
@using PagedList;
@using PagedList.Mvc;
<style>
    a {
        cursor: pointer !important;
    }
</style>
<table class="table table-bordered table-responsive-sm  table-hover">
    <thead>
        <tr>
            <th>Kích thước</th>
            <th>Số lượng</th>
            <th>Giảm giá</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">
                    <div class=" text-danger">
                        Không có dữ liệu!
                    </div>
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
    <tr>
        <td>
            VN : @item.Size.VN - US : @item.Size.US - UK : @item.Size.UK
        </td>
        <td>
            @item.Amount
        </td>
        <td>
            @item.Discount
        </td>
        <td>
            @*<div class="btn-group">
                <a data-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-fw fa-wrench"></i>
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" onclick="EditWarehouse(@item.Id,@item.ProductImgId)">Sửa</a>
                    <a class="dropdown-item" onclick="AddImport(@item.ProductImgId,@item.Id)">Nhập hàng</a>
                </div>

            </div>*@
        </td>
    </tr>
        }

    </tbody>
</table>
<div class="col-md-12">
    <div class="row float-right">
        @*phân trang*@
        @Html.PagedListPager((IPagedList)Model,
        page => Url.Action("ListWarehouse", new { page = page, productImgid = ViewBag.productImgid }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
        {
            HttpMethod = "GET",
            UpdateTargetId = "list-warehouse",
        })
        )
    </div>
</div>
