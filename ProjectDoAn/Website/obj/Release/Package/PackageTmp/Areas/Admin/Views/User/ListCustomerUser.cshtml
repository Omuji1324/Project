@{
    Layout = null;
}
@model IEnumerable<LibData.User>
@using PagedList;
@using PagedList.Mvc;
<table class="table table-bordered table-responsive-sm  table-hover">
    <thead>
        <tr>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Facebook</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="7" class="text-center">
                    <div class=" text-danger">
                        Không có dữ liệu!
                    </div>
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @item.FullName
        </td>
        <td>
            @item.Email
        </td>
        <td>
            @item.Facebook
        </td>
        <td>
            @item.Phone
        </td>
        <td>
            @item.Ward.Name - @item.District.Name - @item.Province.Name
        </td>
        <td>
        </td>
        <td>
            <div class="btn-group">
                <a data-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-fw fa-wrench"></i>
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" onclick="Reset(@item.Id)">Cài lại mật khẩu</a>
                    <a class="dropdown-item" onclick="EditManager(@item.Id)">Sửa</a>
                    <a class="dropdown-item" onclick="DeleteManager(@item.Id)">Xóa</a>
                </div>
            </div>
        </td>
    </tr>
        }

    </tbody>
</table>
<div class="col-md-12">
    <div class="row float-right">
        @*phân trang*@
        @Html.PagedListPager((IPagedList)Model,
        page => Url.Action("CustomerUser", new { page = page, keysearch= ViewBag.keysearch }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions()
        {
            HttpMethod = "GET",
            UpdateTargetId = "list-customer",
        })
        )
    </div>
</div>
