@model LibData.ImportDetail

@{
    LibData.Provider.WarehouseProvider warehouseProvider = new LibData.Provider.WarehouseProvider();
}
<tr class="row-importdetail">
    <td>
        @{
            LibData.Warehouse warehouse = warehouseProvider.GetById(Model.WarehouseId.Value);
            <div class="form-group">
                <input type="hidden" class="@Model.Warehouse.ProductImgId"  value="@Model.Warehouse.SizeId" />
                <input type="hidden" class="WarehouseId" value="@Model.WarehouseId" />
                <h6 class="mb-0"> @warehouse.ProductImg.Product.Name - @warehouse.ProductImg.Color</h6>
                <span class="text-muted font-weight-normal font-italic d-block" style="font-size:11px">VN : @warehouse.Size.VN - US : @warehouse.Size.US - UK : @warehouse.Size.UK</span>
            </div>
        }
    </td>
    <td>

        <input type="number" class="Amount form-control" onchange="UpdateImport()"  min="1" value="@Model.Amount" />
    </td>
    <td>
        @*@item.Price*@
        <input type="number" min="10000" onchange="UpdateImport()" class="Price form-control"  value="@Model.Price" />
    </td>
    <td>
        <a onclick="RemoveImport(this);"> <i class="fa fa-times"></i></a>
    </td>
</tr>