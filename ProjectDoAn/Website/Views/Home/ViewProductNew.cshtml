@using System.Web
@model List<LibData.Product>
@{
    Layout = null;
    var path = Server.MapPath("~/Images/Product");
}
@if (Model.Count > 0)
{
    <div class="shopping-grid">
        <div class="container">
            <h3 class="" align="center">New</h3>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="product-grid7">
                            <div class="product-image7">
                                <a href="#">
                                    <img class="pic-1" src="http://bestjquery.com/tutorial/product-grid/demo8/images/img-1.jpg">
                                    <img class="pic-2" src="http://localhost:6273/Images/Products/@Model[0].AvatarUrl">
                                </a>
                                <ul class="social">
                                    <li title="Chi tiết"><a href="" class="fa fa-search"></a></li>
                                    <li title="Thêm vào giỏ hàng"><a href="" class="fa fa-shopping-cart"></a></li>
                                </ul>
                                <span class="product-new-label">New</span>
                            </div>
                            <div class="product-content">
                                <h3 class="title"><a href="#">@item.Name</a></h3>
                                @*<ul class="rating">
                                    <li class="fa fa-star"></li>
                                    <li class="fa fa-star"></li>
                                    <li class="fa fa-star"></li>
                                    <li class="fa fa-star"></li>
                                    <li class="fa fa-star"></li>
                                </ul>*@
                                <div class="price">
                                    @item.Price VNĐ
                                    @*<span>$20.00</span>*@
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
