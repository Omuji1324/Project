@using System.Web
@using LibData.Configuration
@model List<LibData.Product>
@{
    Layout = null;
    var path = Server.MapPath("~/Images/Product");
    var type = ViewBag.Type as string;
}
@if (Model.Count > 0)
{
    <div class="shopping-grid">
        <div class="container">
            <h3 class="my-4">Sản phẩm tương tự<br></h3>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="product-grid7">
                            <div class="product-image7">
                                <a href="#" style="width: 250px; height: 250px; margin: 0px">
                                    <img class="pic-1" src="http://bestjquery.com/tutorial/product-grid/demo8/images/img-1.jpg">
                                </a>
                                <ul class="social">
                                    <li title="Chi tiết"><a href="/Product/DetailProduct?Id=@item.Id" class="fa fa-search"></a></li>
                                    @*          <li title="Thêm vào giỏ hàng"><a href="" class="fa fa-shopping-cart"></a></li>*@
                                </ul>
                                @if (type == ViewConfig.PRODUCTNEW)
                                {
                                    <span class="product-new-label">New</span>
                                }

                            </div>
                            <div class="product-content">
                                <h3 class="title"><a href="/Product/DetailProduct?Id=@item.Id">@item.Name</a></h3>
                                @*<ul class="rating">
                                        <li class="fa fa-star"></li>
                                        <li class="fa fa-star"></li>
                                        <li class="fa fa-star"></li>
                                        <li class="fa fa-star"></li>
                                        <li class="fa fa-star"></li>
                                    </ul>*@

                                @{
                                    var price = item.Price * (100 - item.Discount) / 100;
                                    <div class="price">
                                        @price VNĐ
                                        @if (item.Discount > 0)
                                        {
                                            <span>@item.Price</span>
                                        }

                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
